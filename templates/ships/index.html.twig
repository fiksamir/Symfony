{% extends 'base.html.twig' %}

{% block title %}Ships: {% endblock %}

{% block body %}

    <div class="d-flex justify-content-between my-4">
        <h2 class="">Ships: <span style="font-size:1.2rem;">({{ ships|length }})</span></h2>
    </div>

    <div class="row">
        {% for ship in ships %}
            <div class="mb-4 col">
                <div class="p-4 row">
                    <div class="text-center">
                        <img src="{{ asset('images/magic-photo.png') }}" width="100" height="100">
                        <div class="d-block mt-3 vote-arrows">
                            {{ ship['name'] }}
                        </div>
                        <hr>
                        <div class="d-block">
                            <dl>
                                <dt>Weapon power:</dt>
                                <dd>{{ ship['weapon_power'] }}</dd>
                                <dt>Jedi factor:</dt>
                                <dd>{{ ship['jedi_factor'] }}</dd>
                                <dt>Strength:</dt>
                                <dd>{{ ship['strength'] }}</dd>
                            </dl>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    </div>
{% endblock %}

